<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="http://schemas.kent.boogaart.com/converters">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/PoeShared;component/Themes/Generic.xaml" />
    </ResourceDictionary.MergedDictionaries>

    
    <converters:MapConverter x:Key="MicrophoneMuteStateToIcoConverter" FallbackBehavior="ReturnUnsetValue">
        <converters:Mapping From="{StaticResource FalseValue}">
            <converters:Mapping.To>
                <BitmapImage UriSource="../Resources/microphoneEnabled.ico"/>
            </converters:Mapping.To>
        </converters:Mapping>
        <converters:Mapping From="{StaticResource TrueValue}">
            <converters:Mapping.To>
                <BitmapImage UriSource="../Resources/microphoneDisabled.ico"/>
            </converters:Mapping.To>
        </converters:Mapping>
    </converters:MapConverter>
</ResourceDictionary>